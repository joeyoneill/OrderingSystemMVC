@model mvc_obj_2.Data.Order

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit</h1>

<h4 class="text-center">Order @Model.Id Details</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <br>

            <div class="form-group">
                <label asp-for="OrderName" class="control-label"><strong>Name:</strong></label>
                <input asp-for="OrderName" class="form-control" />
                <span asp-validation-for="OrderName" class="text-danger"></span>
            </div>

            <br>

            <div class="form-group">
                <label asp-for="OrderAddress" class="control-label"><strong>Delivery Address:</strong></label>
                <input asp-for="OrderAddress" class="form-control" />
                <span asp-validation-for="OrderAddress" class="text-danger"></span>
            </div>
            
            <input type="hidden" name="Subtotal" value="@Model.Subtotal" />

            <br><br>

            <div class="form-group text-center">
                <input type="submit" value="Save Changes" class="btn btn-danger" style="font-weight: bold;" />
            </div>

            <br>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-primary" style="font-weight: bold;">
        <i class="fas fa-chevron-left"></i> Back to List
    </a>
</div>

<br>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
