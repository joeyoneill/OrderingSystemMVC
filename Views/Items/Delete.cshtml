@model mvc_obj_2.Controllers.DeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h3 class="text-center">Are you sure you want to delete this?</h3>

<br>

<div>

    <div style="text-align: center;">
        <br>
        <h4><strong>Item @Model.item.Id</strong></h4>
        <hr>
        <div style="display: inline-block; text-align: left;">
            <h6><strong>Item Name:</strong> @Model.item.ItemName</h6>
            <h6><strong>Item Price:</strong> @Model.item.ItemPrice</h6>
        </div>
    </div>

    <hr>
    <br>
    <form asp-action="Delete">
        <div class="text-center">
            <input type="hidden" asp-for="item.Id" />
            <a class="btn btn-primary btn-sm" asp-action="Index" style="font-weight: bold;"><i class="fas fa-chevron-left"></i> Back to List</a> |
            <input type="submit" value="Delete" class="btn btn-danger btn-sm" style="font-weight: bold;" />
        </div>
        <br>
    </form>
</div>

@if (Model.ordersList != null && Model.ordersList.Count > 0) {
    <table class="table">
        <thead>
            <tr>
                <th>OrdersItems ID</th>
                <th>OrdersItems Order ID</th>
                <th>OrdersItems Item ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var orderItem in Model.ordersList)
            {
                <tr>
                    <td>@orderItem.Id</td>
                    <td>@orderItem.OrderId</td>
                    <td>@orderItem.ItemId</td>
                </tr>
            }
        </tbody>
    </table>
}